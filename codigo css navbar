        header {
            background-color: #392269;
            padding-inline: 16px;
        }
        
        .nav {
            max-width: 1280px;
            height: 70px;
            margin-inline: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .menu {
            display: flex;
            gap: 32px;
            list-style: none;
        }
        
        .menu a {
            font-size: 18px;
            color: #fff;
            padding-block: 16px;
        }